{
  "name": "basic-app-angular",
  "version": "0.0.0",
  "license": "MIT",
  "config": {
    "appName": "JssBasicAppAngular",
    "sitecoreDistPath": "/dist/JssBasicAppAngular",
    "sitecoreConfigPath": "/App_Config/Include/zzz",
    "buildArtifactsPathDev": "./dist",
    "buildArtifactsPathProd": "./dist",
    "language": "en"
  },
  "scripts": {
    "setup": "scjss-setup",
    "setup:verify": "scjss-verify-setup",
    "config:deploy": "cross-env-shell scjss-deploy --sourcePath ./sitecore/config --destinationPath {sitecoreInstancePath}$npm_package_config_sitecoreConfigPath",
    "ng": "ng",
    "start": "ng serve --base-href=/",
    "dev": "npm start",
    "build": "ng build && ng build --app 1 --output-hashing=false",
    "prod:build": "npm run build:client-and-server-bundles && npm run webpack:server",
    "build:client-and-server-bundles": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "package": "npm run prod:build && npm run manifest:generate && npm run package:generate && npm run package:deploy",
    "manifest:generate": "cross-env-shell scjss-manifest generate --files ./src/**/*.sitecore.ts --compilers ts-node/register --appName $npm_package_config_appName --viewEngine react --outputPath ./sitecore/manifest/sitecore-import.json --language $npm_package_config_language",
    "manifest:generate:nocontent": "npm run manifest:generate -- --excludeItems --excludeMedia",
    "package:generate": "cross-env-shell scjss-package-generate --manifestPath ./sitecore/manifest --manifestFileName sitecore-import.json --buildPath $npm_package_config_buildArtifactsPathProd --outputPath ./sitecore/update-package --sitecoreDistPath $npm_package_config_sitecoreDistPath --appName $npm_package_config_appName",
    "package:deploy": "cross-env-shell scjss-package-deploy --packagePath ./sitecore/update-package --appName $npm_package_config_appName --shipUrl {shipUrl}",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.2.4",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/platform-server": "^4.2.4",
    "@angular/router": "^4.2.4",
    "@nguniversal/module-map-ngfactory-loader": "^1.0.0-beta.3",
    "@sitecore-jss/sitecore-jss": "^5.0.1",
    "@sitecore-jss/sitecore-jss-angular": "^1.0.4",
    "core-js": "^2.4.1",
    "rxjs": "^5.4.2",
    "ts-loader": "^2.3.7",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.4.4",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@sitecore-jss/sitecore-jss-dev-tools": "^5.0.2",
    "@sitecore-jss/sitecore-jss-manifest": "^5.0.1",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "chalk": "^2.1.0",
    "codelyzer": "~3.2.0",
    "cross-env": "^5.0.5",
    "express": "^4.16.2",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.3.3"
  }
}
